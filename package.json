{
  "name": "@pmp-back/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",

    "// ============ SERVICES INDIVIDUELS ============": "",
    "start:gateway": "nx serve api-gateway",
    "start:auth": "nx serve auth-service",
    "start:user": "nx serve user-service",
    "start:project": "nx serve project-service",

    "// ============ LANCER TOUS LES SERVICES ============": "",
    "start:services": "concurrently --kill-others-on-fail \"npm:start:auth\" \"npm:start:user\" \"npm:start:gateway\" \"npm:start:project\"",
    
    "start:all": "concurrently --kill-others-on-fail \"npm:docker:up\" \"npm:start:services\"",

    "start:dev": "concurrently --names \"AUTH,USER,GATEWAY\" --prefix-colors \"cyan,magenta,green\" \"npm:start:auth\" \"npm:start:user\" \"npm:start:gateway\" \"npm:start:project\"",

    "// ============ DOCKER ============": "",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose up -d",

    "// ============ BUILD ============": "",
    "build:all": "nx run-many --target=build --all",
    "build:gateway": "nx build api-gateway",
    "build:auth": "nx build auth-service",
    "build:user": "nx build user-service",
    "build:project": "nx build project-service",

    "// ============ DATABASE ============": "",
    "prisma:generate": "prisma generate --schema=./libs/database/prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema=./libs/database/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./libs/database/prisma/schema.prisma",
    "prisma:seed": "ts-node --project tsconfig.base.json tools/scripts/seed.ts",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate:dev && npm run prisma:seed",

    "// ============ TESTS ============": "",
    "test:all": "nx run-many --target=test --all",
    "lint:all": "nx run-many --target=lint --all"
  },
  "private": true,
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.10",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.10",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/microservices": "^11.1.10",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.10",
    "@nestjs/platform-socket.io": "^11.1.10",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/websockets": "^11.1.10",
    "@prisma/client": "^5.22.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.5",
